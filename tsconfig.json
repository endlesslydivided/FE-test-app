{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src",
    "custom.d.ts",
    "shared/consts",
    ".eslintrc.js",
  ],
  "baseUrl": "./src",
  "paths": {
    "@/*": [
      "./src/*"
    ],
    "@common/*": [
      "./src/common/*"
    ],
    "@assets/*": [
      "./src/assets/*"
    ],
  }
}
